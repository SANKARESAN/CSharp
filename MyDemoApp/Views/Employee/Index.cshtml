@{
    ViewData["Title"] = "Employee List";
}

@model IEnumerable<Employee>

<h1 class="bg-info text-white">Employee List</h1>
<a asp-action="Create" class="btn btn-secondary">Create Employee</a>
<table class="table table-sm table-bordered">
    <tr>
        <th>EMP_Id</th>
        <th>EMP_Name</th>
        <th>EMP_Role</th>
        <th>DEPT_Id</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (Employee emp in Model)
    {
        <tr>
            <td>@emp.Id</td>
            <td>@emp.Name</td>
            <td>@emp.Designation</td>
            <td>@emp.DepartmentId</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@emp.Id">Update</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@emp.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>